@model EventEaseApp.Models.Event

@{
    ViewData["Title"] = "Edit Event";
}

<h1>Edit Event</h1>

<h4>Event</h4>
<hr />

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Venue Dropdown -->
    <div class="form-group">
        <label asp-for="VenueID" class="control-label"></label>
        <select asp-for="VenueID" class="form-control" asp-items="ViewBag.VenueList">
            <option value="">Select a Venue</option>
        </select>
        <span asp-validation-for="VenueID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Event Type</label>
        <select asp-for="EventTypeID" asp-items="@(new SelectList((IEnumerable<EventType>)ViewData["EventType"], "EventTypeID", "Name" ))">
            <option value="">Select type</option>
        </select>
        
    </div>

    <div class="form-group">
        <label asp-for="EventName" class="control-label"></label>
        <input asp-for="EventName" class="form-control" />
        <span asp-validation-for="EventName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventDate" class="control-label"></label>
        <input asp-for="EventDate" class="form-control" />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
